# EditorConfig helps maintain consistent coding styles
# across different editors and IDEs
root = true

# Default settings
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# JavaScript
[*.{js,mjs,cjs}]
indent_style = space
indent_size = 4

# HTML
[*.html]
indent_style = space
indent_size = 4

# CSS and related files
[*.{css,scss,less}]
indent_style = space
indent_size = 4

# JSON
[*.json]
indent_style = space
indent_size = 4

# Markdown â€” don't strip trailing whitespace
[*.md]
trim_trailing_whitespace = false
